<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/charback"
    tools:context=".Characters">

    <ImageView
        android:id="@+id/warrior"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:tintMode="src_over"
        app:layout_constraintBottom_toBottomOf="@+id/rogue"
        app:layout_constraintEnd_toStartOf="@+id/rogue"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/warrior" />

    <ImageView
        android:id="@+id/mage"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:tintMode="src_over"
        app:layout_constraintEnd_toStartOf="@+id/warrior"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mage" />

    <ImageView
        android:id="@+id/rogue"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:tintMode="src_over"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rogue" />

</androidx.constraintlayout.widget.ConstraintLayout>